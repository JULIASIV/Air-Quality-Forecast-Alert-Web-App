# NASA Space Apps - Air Quality Forecasting App Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/air-quality-app
REDIS_URL=redis://localhost:6379

# NASA APIs
NASA_API_KEY=your_nasa_api_key_here
EARTHDATA_USERNAME=your_earthdata_username
EARTHDATA_PASSWORD=your_earthdata_password

# Third-party APIs
OPENAQ_API_KEY=your_openaq_api_key
WEATHER_API_KEY=your_weather_api_key
OPENWEATHERMAP_API_KEY=your_openweathermap_key

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=24h

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Data Update Intervals (in minutes)
TEMPO_DATA_UPDATE_INTERVAL=30
WEATHER_DATA_UPDATE_INTERVAL=60
GROUND_DATA_UPDATE_INTERVAL=15

# Alert Thresholds
AQI_ALERT_THRESHOLD=101
PM25_ALERT_THRESHOLD=35.5
NO2_ALERT_THRESHOLD=100

# External URLs
WHO_DATA_URL=https://www.who.int/data/gho/data/themes/air-pollution
PANDORA_DATA_URL=https://data.pandonia.net
TEMPO_DATA_URL=https://data.larc.nasa.gov/TEMPO
